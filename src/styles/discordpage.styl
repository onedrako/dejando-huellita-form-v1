@import "./globals.styl"
@import "./header.styl"
@import "./footer.styl"

main
    width: 100%
    min-height: 760px
    background background-main-color
    display: flex
    flex-direction: column
    align-items: center
    justify-content: center
    color: white
    img
        height: 200px
        margin-top: 15px
    h2
        font-size: title-size

.instructions, .result
    padding: 20px
    margin 20px
    font-size: size-font-mobile-navs
    text-align: justify
    background: cards-color
    border-radius: 15px
    &__main
        height: 150px
        display: flex
        justify-content: center
        align-items: center
        margin 0px 0px 40px 0px
        &--title
            font-size: title-size + 1rem
            text-align: center
        img
            height: 75px
            margin 0px 0px 0px 0px
    &__title
        height: 80px
        display: flex
        justify-content: center
        align-items: center
        margin-top top-margin-text + 10px
        &--text
            font-size: title-size
            text-align: center
        img
            height: 50px
            margin 0px 5px 0px 0px
    p
        margin-top: top-margin-text
        line-height: 15px
    ol
        // margin-top: top-margin-text
        li
            margin-top: 10px

.form, .result
    display: grid
    min-height: 600px
    padding: 20px
    margin 20px
    background: cards-color
    border-radius: 15px
    &__main
        margin-bottom: 20px
        text-align: center
        img
            height: 150px
            margin-bottom: 15px
    &__huella
        text-align: start
        font-size: size-font-mobile-navs
        line-height: 20px
        label
            margin-bottom: 15px
            height: 35px
        input
            margin-bottom: 15px
            width: 100%
            height: 30px
            text-align: justify
            align-items: center
        textarea
            width: 100%
            height: 75px
            font-size: size-font-mobile-navs
            font-family: fuente1
            margin-bottom: 10px
        button
            margin-top: 30px
            height: 30px
            width: 100%
            color white
            font-weight: bold
            background: background-nav-color
            border: 1px white solid
    
.result-main
    height: 100vh
    p
        height: fit-content

.result
    max-width: 400px